# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=python
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),python)
  dive_config = python

else ifeq ($(config),pythoncl)
  dive_config = pythoncl

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := dive

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

dive:
ifneq (,$(dive_config))
	@echo "==== Building dive ($(dive_config)) ===="
	@${MAKE} --no-print-directory -C . -f dive.make config=$(dive_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f dive.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  python"
	@echo "  pythoncl"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   dive"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"